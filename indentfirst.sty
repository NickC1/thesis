\let\@st@rtsection\@startsection

\def\@startsection#1#2#3#4{\skip@=#4\relax
\ifdim \skip@ < \z@ \skip@=-\skip@\fi
\@st@rtsection{#1}{#2}{#3}{\skip@}}
